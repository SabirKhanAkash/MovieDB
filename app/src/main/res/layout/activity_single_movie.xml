<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.activity.SingleMovieActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:orientation="vertical">
            
            <ImageView
                android:id="@+id/moviePoster"
                android:layout_weight="0.3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/poster_icon"/>

            <LinearLayout
                android:background="@drawable/container_bg"
                android:padding="15sp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie Name Here"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:id="@+id/movieTitle"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tagline "
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:id="@+id/tagline"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popularity Score Here"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="12sp"
                    android:textStyle="normal"
                    android:id="@+id/popularity"/>

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="5sp"
                    android:id="@+id/genreView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:layout_gravity="center"
                    tools:listitem="@layout/genre_item" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:columnCount="3"
                    android:rowCount="1">

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10sp"
                        app:cardElevation="9sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        android:layout_marginStart="10sp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="5sp"
                            android:layout_margin="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Runtime"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_regular"
                                android:textSize="12sp"
                                android:textStyle="normal"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="- h -- min"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_regular"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:id="@+id/runtime"/>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        app:cardElevation="9sp"
                        android:layout_marginStart="10sp"
                        android:layout_rowWeight="1"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="5sp"
                            android:layout_margin="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Language"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_regular"
                                android:textSize="12sp"
                                android:textStyle="normal"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="-"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_regular"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:id="@+id/language"/>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="10sp"
                        android:layout_marginTop="5sp"
                        android:layout_marginBottom="5sp"
                        app:cardElevation="9sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="5sp"
                        android:layout_columnWeight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:padding="5sp"
                            android:layout_margin="5sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Release Date"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_regular"
                                android:textSize="12sp"
                                android:textStyle="normal"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="XXXX-XX-XX"
                                android:textColor="@color/black"
                                android:fontFamily="@font/inter_regular"
                                android:textSize="12sp"
                                android:textStyle="bold"
                                android:id="@+id/releaseDate"/>

                        </LinearLayout>



                    </androidx.cardview.widget.CardView>

                </GridLayout>

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Movie Overview"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="20sp"
                    android:textStyle="bold"/>

                <TextView
                    android:layout_marginTop="10sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="A brief overview of the movie will be displayed here"
                    android:textColor="@color/black"
                    android:fontFamily="@font/inter_regular"
                    android:textSize="15sp"
                    android:id="@+id/movieOverview"/>

            </LinearLayout>
            
        </LinearLayout>
        
    </ScrollView>

</LinearLayout>